#include <iostream>
using namespace std;
class akash
{
    int age;
    string name;
    public:
   void get();
   void display();
};
void akash::get()
{
    cout<<"enter the name"<<endl;
    cin>>name;
    cout<<"enter the age"<<endl;
    cin>>age;
}
void akash::display()
{
    cout<<name<<endl;
    cout<<age<<endl;
}
int main() 
{
    akash p;
    p.get();
    p.display();
}
