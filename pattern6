#include<bits/stdc++.h>
using namespace std;
int main()
{
    cout<<"Enter the number of rows and coloms::";
    int n;
    cin>>n;


    for(int i=n;i>=1;i--)
    {
        for(int j=i;j>=1;j--)                                                        //   secound approch
        {
            cout<<"* ";
        }
        cout<<endl;
    }

cout<<endl;

    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n-i+1;j++)                                                 //     first approch
        {
            cout<<"* ";
        }
        cout<<endl;
    }

    return 0;
}


