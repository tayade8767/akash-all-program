#include <iostream>
using namespace std;

int main() {
    int t,n;
    cin>>t;
    while(t--)
    {
    int count=0;
        cin>>n;
        int a[n];
        for(int i=0;i<n;i++)
        {
            cin>>a[i];
        }
         for(int i=0;i<n;i++)
        {
            
            // int m=a[i+1];
            // int n=l+m;
            if(a[i]==1)
            {
                count++;
            }
        }
        cout<<count<<endl;
    }
	return 0;
}
