
#include<iostream>
#include<queue>
using namespace std;
int main()
{
priority_queue<int> pq;                 //  arrange || insert the element as in decreasing              max heap
    pq.push(210);
    pq.push(211);
    pq.push(2120);
    pq.push(213);
    pq.push(214);
    pq.push(215);


                         
cout<<"top element="<<pq.top()<<endl;                   // gives top element means 1st element


while(!pq.empty())
    {
        pq.pop();                           //pop the element
    }
}
