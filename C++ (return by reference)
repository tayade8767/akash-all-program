#include<iostream>
using namespace std;

int &fun(int &x)                                         //the value of function takes and the gives the reference and again total function gives the function
{
    cout<<"the value of a before="<<x<<endl;
    return x;
}

int main()
{
   int a=10;
   fun(a)=25;                             //function can pass the vaue (a=10) using reference and the total function pass the value (fun(a)=25)
   cout<<"the value of a after="<<a;
}
