#include<iostream>
using namespace std;
class outer
{
    public:
    int a=10;
    static int b;
    void display()
    {
          i.show();
          cout<<"the value="<<i.x;
    }
    class inner
    {
        public:
        int x=2079879;
        void show()
        {
            cout<<"the value of b="<<b<<endl;
        }
    };
    inner i;
};
int outer::b=20;
int main()
{
    outer p;
    p.display();
}
