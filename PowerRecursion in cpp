#include<iostream>
#include<cmath>
using namespace std;
int PowerRecursion(int n,int m)
{
    if(m>1)
    {
        return PowerRecursion(n,(m-1))*n;
    }
}
int main()
{
    int n,m;
    cout<<"Enter the Base"<<endl;
    cin>>n;
    cout<<"Enter the Power"<<endl;
    cin>>m;
    cout<<PowerRecursion(n,m);
}
