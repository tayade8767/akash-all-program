#include<iostream>
using namespace std;
 
 class base
 {
      public:
      base()
      {
         cout<<"default of base class"<<endl;
      }
      base(int x)
      {
         cout<<"paramiteriz of class base::::"<<x<<ends;
      }
 };

 class derived:public base
 {
      public:
      derived()
      {
         cout<<"default of derived class"<<endl;
      }
      derived(int y)
      {
          cout<<"paramiteriz of derived class::::"<<y<<endl;
      }
 };

 int main()
 {
    base b(203284);
    derived d(20);
 }
