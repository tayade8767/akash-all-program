#include <iostream>
using namespace std;
int main() 
{
    int ptr[5],*sum,total=0;
    cout<<"enter the element"<<endl;
    for(int i=0;i<5;i++)               //input from user
    {
        cin>>ptr[i];
    }
     
     sum=ptr;
     
    for(int i=0;i<5;i++)
    {                                     //sum of an array by using pointer
        total+=*(sum+1);
    }
    cout<<"total of an array="<<total;
    return 0;
}
