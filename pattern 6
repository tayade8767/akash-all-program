#include<iostream>
using namespace std;
int main()
{
    int n,row,col,a;
    cout<<"enter the N::";
    cin>>n;
    for(int row=0;row<(2*n);row++)
        {
            if(row<n)
            {
                a=row;
            }else
            {
                a=2*n-row;
            }
          for(int col=0;col<a;col++)
            {
                cout<<"* ";
            }  
            cout<<endl;
        }
}


enter the N::5
